<config>
    <menu>
        <oggetto_blog module="oggetto_blog" translate="title">
            <title>Oggetto Blog</title>
            <sort_order>70</sort_order>
            <children>
                <posts translate="title">
                    <title>Manage Posts</title>
                    <sort_order>20</sort_order>
                    <action>adminhtml/blog</action>
                </posts>
                <new_post translate="title">
                    <title>Add Post</title>
                    <sort_order>10</sort_order>
                    <action>adminhtml/blog/new</action>
                </new_post>
            </children>
        </oggetto_blog>
    </menu>
    <acl>
        <resources>
            <all>
                <title>Allow Everything</title>
            </all>
            <admin>
                <children>
                    <Oggetto_Blog translate="title">
                        <title>Oggetto Blog Module</title>
                        <sort_order>70</sort_order>
                    </Oggetto_Blog>
                </children>
            </admin>
        </resources>
    </acl>
</config>
