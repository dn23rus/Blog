<config>
    <modules>
        <Oggetto_Blog>
            <version>0.1.0</version>
        </Oggetto_Blog>
    </modules>

    <global>
        <models>
            <oggetto_blog>
                <class>Oggetto_Blog_Model</class>
                <resourceModel>oggetto_blog_resource</resourceModel>
            </oggetto_blog>
            <oggetto_blog_resource>
                <class>Oggetto_Blog_Model_Resource</class>
                <entities>
                    <post>
                        <table>oggetto_blog_post_entity</table>
                    </post>
                </entities>
            </oggetto_blog_resource>
        </models>
        <helpers>
            <oggetto_blog>
                <class>Oggetto_Blog_Helper</class>
            </oggetto_blog>
        </helpers>
        <blocks>
            <oggetto_blog>
                <class>Oggetto_Blog_Block</class>
            </oggetto_blog>
        </blocks>
        <resources>
            <oggetto_blog_setup>
                <setup>
                    <module>Oggetto_Blog</module>
                    <class>Oggetto_Blog_Model_Entity_Setup</class>
                </setup>
            </oggetto_blog_setup>
            <oggetto_blog_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </oggetto_blog_read>
            <oggetto_blog_write>
                <conection>
                    <use>core_write</use>
                </conection>
            </oggetto_blog_write>
        </resources>
    </global>

    <frontend>
        <routers>
            <oggetto_blog>
                <use>standard</use>
                <args>
                    <module>Oggetto_Blog</module>
                    <frontName>oggetto_blog</frontName>
                </args>
            </oggetto_blog>
        </routers>
        <layout>
            <updates>
                <oggetto_blog>
                    <file>oggetto_blog.xml</file>
                </oggetto_blog>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <layout>
            <updates>
                <oggetto_blog>
                    <file>oggetto_blog.xml</file>
                </oggetto_blog>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <oggetto_blog before="Mage_Adminhtml">Oggetto_Blog_Adminhtml</oggetto_blog>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

</config>
